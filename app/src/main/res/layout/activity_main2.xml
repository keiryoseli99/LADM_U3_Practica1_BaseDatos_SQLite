<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar Conductor"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#93A5D1"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/campoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="NOMBRE" />

    <EditText
        android:id="@+id/campoDomicilio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DOMICILIO"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/campoNoLicencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NO. LICENCIA"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/campoVence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="VENCIMIENTO DE LICENCIA: YYYY-MM-DD"
        android:inputType="date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:padding="0dp">

        <Button
            android:id="@+id/btnInsertarConductorRegresar"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="REGRESAR"
            android:textSize="20sp"
            android:backgroundTint="#93A5D1"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnInsertarConductor"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="INSERTAR"
            android:textSize="20sp"
            android:backgroundTint="#93A5D1"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listaConductor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>