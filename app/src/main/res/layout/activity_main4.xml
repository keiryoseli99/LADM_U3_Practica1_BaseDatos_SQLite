<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar Vehículo"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#93A5D1"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/campoPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="PLACA" />

    <EditText
        android:id="@+id/campoMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="MARCA"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/campoModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="MODELO"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/campoYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="AÑO"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:padding="0dp">

        <Button
            android:id="@+id/btnRegresarVehiculo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="REGRESAR"
            android:textSize="20sp"
            android:backgroundTint="#93A5D1"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnInsertarVehiculo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="INSERTAR"
            android:textSize="20sp"
            android:backgroundTint="#93A5D1"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listaVehiculo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>